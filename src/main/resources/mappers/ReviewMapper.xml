<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.frontservice.mapper.ReviewMapper">
    <resultMap id="reviewResultMap" type="Review">
        <result property="uid" column="uid"/>
        <result property="userUid" column="user_uid"/>
        <result property="socialUid" column="social_uid"/>
        <result property="orderUid" column="order_uid"/>
        <result property="rate" column="rate"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="createdDate" column="created_date"/>
        <result property="version" column="version"/>
    </resultMap>

    <insert id="insertReview" parameterType="Review" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO review (user_uid,social_uid,order_uid,rate,title,content,status)
        VALUES (#{userUid},#{socialUid},#{orderUid}, #{rate}, #{title}, #{content}, #{status});
    </insert>

</mapper>